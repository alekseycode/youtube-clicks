{
  "manifest_version": 3,
  "name": "YouTube Click Tracker",
  "version": "1.1",
  "description": "Tracks intentional navigation to YouTube",
  "permissions": ["webNavigation", "storage", "alarms"],
  "background": {
    "service_worker": "background.js"
  },
  "action": {
    "default_popup": "popup.html"
  },
  "host_permissions": ["*://*.youtube.com/*"]
}
